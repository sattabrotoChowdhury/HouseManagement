<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment.FlateSaleFragment">



    <LinearLayout
        android:id="@+id/liner1"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="UselessParent">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessLeaf,UselessParent">


            <ImageView
                android:id="@+id/Back_To_Home"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_house"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="ContentDescription">

            </ImageView>

        </RelativeLayout>

    </LinearLayout>




    <ScrollView
        android:layout_below="@id/liner1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize,UselessLeaf"
            android:orientation="vertical">


            <LinearLayout

                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">



                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_marginStart="7dp"
                    android:text="বাসার ঠিকানা :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>

                <EditText
                    android:id="@+id/flat_address"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="text"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>

            </LinearLayout>
            <LinearLayout

                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">



                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_marginStart="7dp"
                    android:text="বাসার কত নম্বর ফ্ল্যাট বিক্রয় করবেন? : "
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/FloorID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="number"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>

            </LinearLayout>





            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">






                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_marginStart="7dp"
                    android:text=" বেড রুম কয়টি?"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>
                <EditText
                    android:id="@+id/flat_badRoom"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="text"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>
            </LinearLayout>






            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_marginStart="7dp"
                    android:text="স্নান কক্ষ / গোসলখানা কয়টি?"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>

                <EditText
                    android:id="@+id/flat_bathroom"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="number"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>

            </LinearLayout>




            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_marginStart="7dp"
                    android:text="ফ্ল্যাটটি  কত বর্গ ফিট ?"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>

                <EditText
                    android:id="@+id/flat_quantity"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="number"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>

            </LinearLayout>


            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_marginStart="7dp"
                    android:text="ফ্ল্যাটটি কত টাকায় বিক্রি করতে চান ?"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">

                </TextView>

                <EditText
                    android:id="@+id/flat_price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edtext_background"
                    android:inputType="number"
                    android:textColor="#000"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields">

                </EditText>

            </LinearLayout>



            <LinearLayout

                android:orientation="horizontal"
                android:background="@drawable/edtext_background"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="  পার্কিং এর জন্য ব্যবস্থা আছে কি ? "
                    android:layout_gravity="center_vertical"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText">

                </TextView>
                <RadioGroup
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/flat_parking_groupButton"
                    tools:ignore="UselessParent">

                    <RadioButton
                        android:id="@+id/parking_Flat_No_Radio_button"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="না"
                        tools:ignore="HardcodedText" />
                    <RadioButton
                        android:id="@+id/parking_Flat_Yes_Radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="হ্যাঁ"
                        android:padding="5dp"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />



                </RadioGroup>
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/edtext_background"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="  লিফ্‌ট এর  ব্যবস্থা আছে কি ?"
                    android:layout_gravity="center_vertical"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText">

                </TextView>
                <RadioGroup
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/radioGroupLiftFlat"
                    tools:ignore="UselessParent">


                    <RadioButton
                        android:id="@+id/flat_lift_No_Radio_button"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="না"

                        tools:ignore="HardcodedText" />

                    <RadioButton
                        android:id="@+id/flat_lift_Yes_Radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="হ্যাঁ"
                        android:padding="5dp"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />



                </RadioGroup>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <CheckBox
                    android:id="@+id/flat_check_Box"
                    android:layout_centerHorizontal="true"
                    android:text="Flat Sale"
                    android:textSize="15sp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    tools:ignore="HardcodedText">


                </CheckBox>

            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/flat_post"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:text="Submit Post"
                    android:layout_centerInParent="true"
                    android:background="@drawable/profile_btn_back"
                    android:layout_width="288dp"
                    android:layout_height="50dp"
                    tools:ignore="HardcodedText">

                </Button>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </LinearLayout>








        </LinearLayout>
    </ScrollView>






</RelativeLayout>