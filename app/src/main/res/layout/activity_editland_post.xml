<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAllData.EditlandPostActivity">





    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/landEditItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>



    </ScrollView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="Orientation,ScrollViewSize">





    <LinearLayout
        android:id="@+id/liner1"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="UselessLeaf">


        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/dada"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/landEd_userImage"
            android:layout_width="45dp"
            android:layout_height="45dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/Land_userName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText,ScrollViewSize,UseCompoundDrawables,UselessLeaf">


        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:ignore="ContentDescription">


        </ImageView>
        //1
        <EditText
            android:enabled="false"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:id="@+id/land_userAddress"
            android:padding="5dp"
            android:textColor="#000"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        <EditText
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:id="@+id/land_number"
            android:padding="5dp"
            android:textColor="#000"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        //2
        <EditText
            android:enabled="false"
            android:id="@+id/land_userqnty1"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        //3
        <EditText
            android:id="@+id/land_userPrice1"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17sp"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        //4
        <EditText
            android:id="@+id/land_user_per_Unit_price1"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17sp"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        //5
        <EditText
            android:id="@+id/land_userMontlyPayDate1"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,LabelFor,TextFields">


        </EditText>
        //6
        <EditText
            android:id="@+id/land_userLevDate1"
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17sp"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>
        //7
        <EditText
            android:background="@drawable/main_btn_back"
            android:layout_marginTop="10dp"
            android:id="@+id/land_userAdnFee1"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17sp"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </EditText>




        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <CheckBox
                android:id="@+id/land_activeCheck"
                android:textSize="18sp"
                android:padding="7dp"
                android:text="Active"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText">

            </CheckBox>
            <CheckBox
                android:id="@+id/land_inactiveCheck"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:padding="5dp"
                android:text="Inactive"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText">

            </CheckBox>

        </RelativeLayout>

        <Button
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/profile_btn_back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Update"
            android:id="@+id/land_post_update_Btn"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="280dp"
            android:layout_height="50dp"
            tools:ignore="HardcodedText">



        </Button>

        <Button
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/profile_btn_back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Land Image upload "
            android:id="@+id/land_Image_update_Btn"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="280dp"
            android:layout_height="50dp"
            tools:ignore="HardcodedText">



        </Button>




    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>