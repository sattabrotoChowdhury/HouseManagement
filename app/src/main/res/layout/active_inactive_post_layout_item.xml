<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">





        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:id="@+id/liner_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="UselessLeaf">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">


                    <de.hdodenhof.circleimageview.CircleImageView

                        android:id="@+id/ActiveProfileImage"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dada"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <TextView
                        android:id="@+id/landUserName"
                        android:layout_toRightOf="@id/ActiveProfileImage"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:text="Sourav dada"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded">

                    </TextView>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/act_intc_chk"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </TextView>



                    <TextView
                        android:visibility="gone"
                        android:id="@+id/act_chk"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_width="20dp"
                        android:background="@drawable/online"
                        android:layout_height="20dp">

                    </TextView>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/intcv_chk"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_width="20dp"
                        android:background="@drawable/ofline"
                        android:layout_height="20dp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_below="@id/liner_layout"
                android:layout_width="match_parent"
                android:layout_height=".7dp">

            </View>

            <LinearLayout
                android:id="@+id/liner_layout2"
                android:layout_below="@id/view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_below="@id/liner_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView

                        android:id="@+id/land_location"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="Sylhet,moulvibazar,dhaka,"
                        android:background="@drawable/edtext_background"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:layout_weight="5"
                        android:layout_marginStart="5dp"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText,NestedWeights">

                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/land_qunty"
                        android:background="@drawable/edtext_background"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Room"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText,NestedWeights">

                    </TextView>
                    <TextView
                        android:id="@+id/land_price"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Price"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/edtext_background"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText,NestedWeights">

                    </TextView>
                    <TextView
                        android:id="@+id/per_qty_price"
                        android:background="@drawable/edtext_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText,NestedWeights">

                    </TextView>




                </LinearLayout>






            </LinearLayout>


        </RelativeLayout>








</RelativeLayout>